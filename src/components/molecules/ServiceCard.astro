---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  text: string;
  icon?: string;
}
const { title, text, icon } = Astro.props;
---

<article class="cursor-default border-8 border-black/30 bg-black/60 bg-clip-padding p-6 backdrop-blur-xl transition-all hover:border-black/40 hover:bg-black/70">
  <header class="mb-2 flex items-center justify-start gap-2">
    {icon && <Icon name={icon} class="h-10 w-10 text-orange-400" />}
    <h2 class="bg-gradient-to-r from-orange-400 to-orange-200 bg-clip-text text-3xl font-bold tracking-tighter text-transparent">{title}</h2>
  </header>
  <main class="text-lg font-medium tracking-tight text-white">
    {text}
  </main>
</article>

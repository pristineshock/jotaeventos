---
import { Icon } from "astro-icon";

interface Props {
  link: string;
  name: string;
  umamiEvent?: string;
}
const { link, name, umamiEvent } = Astro.props;
---

<a href={link} target="_blank" data-umami-event={umamiEvent ? umamiEvent : null}>
  <Icon name={name} class="h-20 w-20 p-2 text-white transition-all hover:text-orange-400" />
</a>
